<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <!--
       The infrastructure-cloudbees.properties file is not commited into Github (see .gitignore),
       as it contains the credentials to the production database.
       If you want to use this configuration, copy/paste the infrastructure-dev.properties file
       to get started.
    -->

    <context:property-placeholder
            location="classpath*:META-INF/spring/infrastructure/cloudbees/infrastructure-cloudbees.properties"/>

</beans>
